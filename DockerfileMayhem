FROM debian:12-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    clang \
    llvm \
    make \
    cmake \
    && rm -rf /var/lib/apt/lists/* 

# Set the working directory in the container to /app
WORKDIR /app

# Copy the current directory contents into working directory
COPY . .

RUN mkdir targets \
    && gcc -o targets/patch-dtb /app/OpenWrt/openwrt-18.06.2/tools/patch-image/src/patch-dtb.c \
    &&  gcc -o targets/patch-cmdline /app/OpenWrt/openwrt-18.06.2/tools/patch-image/src/patch-cmdline.c

